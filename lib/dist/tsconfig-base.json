{
    "compilerOptions": {
        "declaration": true,
        "sourceMap": true,
        "declarationMap": true,
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "composite": true,
        "isolatedModules": false,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "experimentalDecorators": true,
        "allowUnreachableCode": true
    }
}